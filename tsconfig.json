{
  "compilerOptions": {
    "target": "es5",                                     
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@modules/*":["./src/modules/*"],
      "@infra/*":["src/infra/*"],
      "@core/*":["./src/core/*"],
      "@config/*":["./src/config"]
    }
  }
}
